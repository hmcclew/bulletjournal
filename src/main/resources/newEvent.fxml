            </Label>
            <Label fx:id="startTime" layoutX="30.0" layoutY="390.0" text="Start Time">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextField fx:id="durationHoursContent" layoutX="30.0" layoutY="530.0" prefHeight="32.0" prefWidth="190.0" />

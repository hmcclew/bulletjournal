            </Label>
            <Label fx:id="name" layoutX="30.0" layoutY="85.0" text="Name">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextField fx:id="nameContent" layoutX="30.0" layoutY="110.0" prefHeight="20.0" prefWidth="811.0" />
            <Label fx:id="description" layoutX="30.0" layoutY="150.0" text="Description (Optional)">
                <font>
                    <Font size="16.0" />
                </font>
            </Label>
            <TextField fx:id="descriptionContent" layoutX="30.0" layoutY="175.0" prefHeight="20.0" prefWidth="811.0" />

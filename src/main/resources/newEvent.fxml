         <RadioButton fx:id="saturday" layoutX="35.0" layoutY="340.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="114.0" text="SATURDAY" />
         <RadioButton fx:id="tuesday" layoutX="35.0" layoutY="260.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="88.0" text="TUESDAY" />
         <RadioButton fx:id="friday" layoutX="35.0" layoutY="320.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="75.0" text="FRIDAY" />
         <RadioButton fx:id="wednesday" layoutX="35.0" layoutY="280.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="106.0" text="WEDNESDAY" />
         <RadioButton fx:id="monday" layoutX="35.0" layoutY="240.0" mnemonicParsing="false" text="MONDAY" />
         <RadioButton fx:id="sunday" layoutX="35.0" layoutY="360.0" mnemonicParsing="false" text="SUNDAY" />
         <TextField fx:id="startTimeMinutesContent" layoutX="288.0" layoutY="440.0" prefHeight="32.0" prefWidth="190.0" />
         <Label fx:id="startTimeHours" layoutX="30.0" layoutY="415.0" prefHeight="19.0" prefWidth="36.0" text="Hour" />

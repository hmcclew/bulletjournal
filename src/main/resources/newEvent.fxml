         <TextField fx:id="startTimeHoursContent" layoutX="30.0" layoutY="440.0" prefHeight="32.0" prefWidth="190.0" />
         <Label fx:id="durationMinutes" layoutX="291.0" layoutY="505.0" prefHeight="19.0" prefWidth="72.0" text="Minutes" />
         <TextField fx:id="durationMinutesContent" layoutX="291.0" layoutY="530.0" prefHeight="32.0" prefWidth="190.0" />
         <Label fx:id="category" layoutX="30.0" layoutY="570.0" text="Select Category">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <ChoiceBox fx:id="categoryChoices" layoutX="32.0" layoutY="600.0" prefWidth="150.0" />
        </children>
    </AnchorPane>
</Scene>
